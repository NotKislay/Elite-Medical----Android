<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TOP App Bar -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#012A4A"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="#012A4A"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/icon_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circular_background"
                android:paddingVertical="10dp"
                android:src="@drawable/icon_avatar" />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Body Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_clinic"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- Content inside the CardView -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"> <!-- Padding inside the card -->

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_db_2" />

                        <TextView
                            android:id="@+id/tv_active_clinic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Active Clinics"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_nurse"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- Content inside the CardView -->
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Add your card content here -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_db_2" />

                        <TextView
                            android:id="@+id/tv_active_nurses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Active Nurses"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <!-- Content inside the CardView -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Add your card content here -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_db_3" />

                        <TextView
                            android:id="@+id/tv_active_jobs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Active Jobs"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_db_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Recent Clinics And Nurses"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:gravity="center_horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#012A4A"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp">

                                <TextView
                                    android:id="@+id/tv_recent_clinics"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="Clinics"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"

                                android:layout_height="50dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#3CAAFF"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp">

                                <TextView
                                    android:id="@+id/tv_recent_nurses"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="Nurses"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_db_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Recent Reviews"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:gravity="center_horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#012A4A"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp">

                                <TextView
                                    android:id="@+id/tv_recent_clinics_review"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="Clinics"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"

                                android:layout_height="50dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#3CAAFF"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp">

                                <TextView
                                    android:id="@+id/tv_recent_nurses_review"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="Nurses"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>