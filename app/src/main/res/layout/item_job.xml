<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_job_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/et_background_grey"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

    <!--    <ImageView
            android:id="@+id/clinic_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginVertical="15dp"
            android:src="@drawable/clinic" />-->

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/job_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Job Title"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_item_job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Job Type"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_item_clinic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Clinic Name"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_item_clinic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Clinic Type"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_item_approval_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Approval Status"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>




    <ImageView
        android:id="@+id/job_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_right" />
</LinearLayout>