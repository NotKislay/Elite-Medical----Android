<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clinic.fragments.jobs.applicants.NurseDetailsFragmentApplicants">

    <!--            TOP App Bar         -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#012A4A"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#012A4A"
            android:contentDescription="@string/back_button"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Applicant Details"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/moreBtn_enr_nurse_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/elite_medical_blue"
            android:padding="10dp"
            android:text="More"
            android:textColor="@color/white"
            android:textSize="17sp" />


    </LinearLayout>


    <ListView
        android:layout_weight="1"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         />

    <LinearLayout
        android:id="@+id/layout_hire_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_hire"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/md_green_100"
            android:text="Hire"
            android:textAllCaps="false"
            android:textColor="@color/md_green_900"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_trial"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/md_blue_100"
            android:text="Trial"
            android:textAllCaps="false"
            android:textColor="@color/md_blue_700"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/md_red_200"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/md_red_900"
            android:textSize="20sp"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>
