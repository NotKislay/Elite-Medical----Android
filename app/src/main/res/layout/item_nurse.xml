<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_nurse_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/et_background_grey"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

<!--    <ImageView
        android:id="@+id/nurse_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="15dp"
        android:src="@drawable/icon_nurse" />-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nurse_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nurse_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nurse_licence_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License Type"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/nurse_licence_expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licence Expiry"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/schedule_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Status"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nurse_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approval Status"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/item_nurse_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_right" />


</LinearLayout>