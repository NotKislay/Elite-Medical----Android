<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL_job_search_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/et_background_grey"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/job_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_search_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_search_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_search_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Approval Status"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/job_search_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_right" />
</LinearLayout>