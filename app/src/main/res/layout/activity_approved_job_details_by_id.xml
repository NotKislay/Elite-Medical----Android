<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E8F1F2"
        tools:context=".admin.ui.sidemenu.dashboard.jobs.ApprovedJobDetailsByID">

        <!-- TOP App Bar -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#012A4A"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#012A4A"
                android:contentDescription="@string/back_button"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Job Details"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_background_sky"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/job_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Job Title"
                            android:textAlignment="textStart"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/clinic_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clinic Name"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <TableLayout
                        android:id="@+id/tableLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="15dp"
                        android:shrinkColumns="*"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"

                                android:text="Job Type:"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Job_Type"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Clinic Name:"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Clinic_Name"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Clinic Address:"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Clinic_Address"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Description:"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Description"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Available From:"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Available_From"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Available To:"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Available_To"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Locations:"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Vacancy:"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_vacancy"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Applied:"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_applied"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Hired:"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_hired"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Approval Status:"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_Approval_Status"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </ScrollView>


            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="100dp"
                android:indeterminateTint="#012A4A"
                android:visibility="visible" />

        </RelativeLayout>


    </LinearLayout>
</layout>