<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".admin.ui.sidemenu.dashboard.clinic_details.ApprovedClinicDetails">


        <!--            TOP App Bar         -->
        <LinearLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#012A4A"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:padding="20dp"
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#012A4A"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nurse Details"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/moreBtn_clinicdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:backgroundTint="@color/elite_medical_blue"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="17sp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nurse Details"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginLeft="10dp"/>
            <ListView

                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</layout>



