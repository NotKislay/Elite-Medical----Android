                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="---"
                    android:textAlignment="viewStart"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:padding="5dp"
                android:id="@+id/row8"
                android:layout_width="match_parent"
