                    android:id="@+id/label1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="---"
                    android:textAlignment="viewStart"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:padding="5dp"
                android:id="@+id/row2"
