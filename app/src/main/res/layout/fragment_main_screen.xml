<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nurse.fragments.home.NurseHomeFragment">
    <!--    tools:context=".ui.fragments.MainScreenFragment"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TOP App Bar -->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#012A4A"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/hamburger"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="#012A4A"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/icon_hamburger" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dashboard"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/icon_person" />


            </LinearLayout>


            <!-- Body Content -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/admin_dashboard_icon_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Top Rated Clinics"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:gravity="center_horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#012A4A"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp">

                                <TextView
                                    android:id="@+id/tv_top_rated_nurse"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="View"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E8F1F2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/icon_calender_clock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Timesheet"
                            android:textColor="#012A4A"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:gravity="center_horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="15dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/elite_medical_blue"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="4dp">

                                <TextView
                                    android:id="@+id/tv_timesheet"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="View"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/card_clock_in"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_view"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/icon_clock_out" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Clock In"
                        android:textColor="#012A4A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_view"
                        android:backgroundTint="@color/md_green_400"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Clock In"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_clock_out"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_view"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/icon_clock_out" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Clock Out"
                        android:textColor="#012A4A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_view"
                        android:backgroundTint="@color/md_red_400"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Clock Out"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!--        <ProgressBar
                    android:id="@+id/loader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="100dp"
                    android:indeterminateTint="#012A4A"
                    tools:visibility="gone" />-->

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/menu"
        android:layout_width="235dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#012A4A"
        android:groupIndicator="@null"
        android:indicatorRight="?android:attr/expandableListPreferredChildIndicatorRight"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" />


</androidx.drawerlayout.widget.DrawerLayout>