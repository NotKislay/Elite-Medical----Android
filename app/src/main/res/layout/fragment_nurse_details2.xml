            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <Button
            android:id="@+id/btn_view_licence"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/md_blue_200"
            android:gravity="center"
            android:text="Open"
            android:textColor="@color/md_blue_900" />

    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/layout_hire_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:visibility="gone"
            android:id="@+id/btn_hire"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/md_green_100"
            android:text="Hire"
            android:textAllCaps="false"
            android:textColor="@color/md_green_900"
            android:textSize="20sp" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_trial"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/md_blue_100"
            android:text="Trial"
            android:textAllCaps="false"
            android:textColor="@color/md_blue_700"
            android:textSize="20sp" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_reject"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/md_red_200"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/md_red_900"
            android:textSize="20sp" />


    </LinearLayout>




</LinearLayout>
